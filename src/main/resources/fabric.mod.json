{
  "schemaVersion": 1,
  "id": "chrysalis",
  "version": "${version}",

  "name": "Chrysalis",
  "description": "A library mod and shared API to assist with creating Minecraft Fabric mods!",
  "authors": [
    "Sydokiddo (Lead Developer)",
    "Shock Micro (Emissive Core Shaders)",
    "Discohund (Emissive Core Shaders)",
    "AmberSand (Miscellaneous)",
    "Soumeh (Contributor)"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/chrysalis",
    "issues": "https://github.com/Sydokiddo/chrysalis/issues",
    "sources": "https://github.com/Sydokiddo/chrysalis"
  },
  "license": "MIT",
  "icon": "assets/chrysalis/icon.png",
  "accessWidener": "chrysalis.accesswidener",
  "environment": "*",

  "entrypoints": {
    "main": [
      "net.sydokiddo.chrysalis.Chrysalis"
    ],
    "client": [
      "net.sydokiddo.chrysalis.client.ChrysalisClient"
    ]
  },
  "mixins": [
    "chrysalis.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.3",
    "fabric-api": "*",
    "minecraft": ">=1.20.4",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "breaks": {},
  "custom": {
    "modmenu": {
      "links": {
        "gui.chrysalis.wiki": "https://github.com/Sydokiddo/chrysalis/wiki"
      }
